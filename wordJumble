#validWord(input("Type a word to check if it's an actual English word?: "))
    
    def perm(self, yourWord): 
        self.yourWord = yourWord
        
        if len(self.yourWord) == 0:
            return [' ']
        lst = self.perm(self.yourWord[1:len(self.yourWord)])
        combos = []
        for i in range(0,len(lst)):
            for j in range(0,len(self.yourWord)):
                jumb = lst[i][0:j] + self.yourWord[0] + lst[i][j:len(self.yourWord) - 1]
                if jumb not in combos:
                    combos.append(jumb)
        return combos

jum = Jumble()
