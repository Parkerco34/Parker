                #print('\nThat is not a word.')
#validWord(input("Type a word to check if it's an actual English word?: "))
    
    def perm(self, yourWord): 
        if len(yourWord) == 0:
            return [' ']
        lst = self.perm(yourWord[1:len(yourWord)])
        combos = []
        for i in range(0,len(lst)):
            for j in range(0,len(yourWord)):
                jumb = lst[i][0:j] + yourWord[0] + lst[i][j:len(yourWord) - 1]
                if jumb not in combos:
                    combos.append(jumb)
        return combos

jum = Jumble()
jum.validWord(yourWord)
jum.perm(yourWord)
