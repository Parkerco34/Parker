'Readin from a textfile and moving columns around
Sub OpenTextFile()
    Dim FilePath As String
    FilePath = "C:\Users\coryp\Desktop\EXCELL\authors1.csv"
    Open FilePath For Input As #1
    row_number = 0
    
    Do Until EOF(1)

        Line Input #1, LineFromFile
        LineItems = Split(LineFromFile, ",") 'with a comma as a separator .csv
        ActiveCell.Offset(row_number, 0).Value = LineItems(2) '(rowNum,colNum) and LineItems(2) to put ISBN in col A
        ActiveCell.Offset(row_number, 1).Value = LineItems(1)
        ActiveCell.Offset(row_number, 2).Value = LineItems(0)
        row_number = row_number + 1
    
    Loop
    Close #1
    
End Sub
