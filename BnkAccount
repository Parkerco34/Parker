class BankAccount:
    print("Welcome to ParkDaddy's Banking System!") 
    
    def __init__(self,owner,balance,choice):

        self.owner = owner
        self.balance = balance
        self.choice = choice
        
    def deposit(self,money_in,depo):
        self.money_in = money_in
        self.balance += money_in
        self.depo = depo
        
        while self.depo != 'N':
            self.money_in = float(input('Deposit amount: '))
            self.balance += money_in        
            self.depo = input('Would you like to make another deposit? (Y OR N): ').upper()
     
        print('Your balance is now ${}'.format(self.balance))            
            
b = BankAccount(input('Enter name: '), 0, input("Deposit or Withdraw?: ").lower())
b.deposit(float(input('Deposit amount: ')),input('Would you like to make another deposit? (Y OR N): ').upper())
# deposit 5 and then 200... WTF
