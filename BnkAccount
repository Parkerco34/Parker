class BankAccount:
    
    def __init__(self):
        self.balance = 0
        print('You are here to put money in or take money out...')
        
    def deposit(self):
        amnt = float(input('Enter amount to be deposited: '))
        self.balance += amnt
        print('\nAmount deposited: ', amnt)
        print('Net balance is: ', self.balance)
        
    def withdraw(self):
        amnt = float(input('Enter amount to be withdrawn: '))
        if amnt > self.balance:
            print('Insufficient funds')
        else:
            self.balance -= amnt
            print('You withdrew: ', amnt)
            print('New blance is ', self.balance)
            
bank = BankAccount()
bank.deposit()
bank.withdraw()
