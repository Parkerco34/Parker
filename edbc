import pandas as pd
import tkinter as tk

# Latest BC Report:

lastdate = input('Enter the date of the latest report as M.DD.YY: ')

currentDate1 = int(input('Enter Current date as YYYYMMDD: '))
currentDate2 = input('Enter Current date as M.DD.YY: ')
month = input('Enter the current month (ex: August): ').lower()

filePath1 = '//gen-filesrv-v01/MatthewO/James/ED Borrower Contact/ED BC {}.xlsx'.format(lastdate) 
dfOld1 = pd.read_excel(filePath1, sheet_name=0)
dfOld2 = pd.read_excel(filePath1, sheet_name=1)

# Obtaining Current ED_INVENTORY:


filePath2 = '//gen-filesrv-v01/Public/Reports/ED/ED_Inventory_{}.csv'.format(currentDate1)
dfCurr = pd.read_csv(filePath2)
with pd.ExcelWriter(r'C:/Users/coryp/Desktop/EXCELL/BCExample.xlsx',
                    engine='xlsxwriter') as ew1:
    dfCurr.to_excel(ew1, sheet_name='ED_Inventory_{}'.format(currentDate1), index=False)

# Getting the RAW DATA:


filePath3 = '//gen-filesrv-v01/MatthewO/Cory/Titanium Reports/{}/{}/ED BC_New.txt'.format(month,currentDate2)
dfRaw = pd.read_csv(filePath3, delimiter='\t')
# Write Raw Data to Excel Sheet:
ew2 = pd.ExcelWriter(r'C:/Users/coryp/Desktop/EXCELL/Book1.xlsx')
dfRaw.to_excel(ew2, sheet_name='Sheet1') 
