class FamilyMember:
    cats = []
    
    def __init__(self,cats):
        self.cats = cats
    
class Cat:
    species = 'Felis catus'
    
    def __init__(self,name,age):
        self.name = name
        self.age = age
        
    def descript(self):
        return "{} is a Bengal who is {} years old".format(self.name,self.age)
    
    def noise(self,sound):
        return "The little shit, {}, yells at me like {}".format(self.name,sound)
    
class Orange(Cat):
    def gordo(self,cuddy):
        return "{} is another little shit who likes to {}".format(self.name,cuddy)
    
class Sockets(Cat):
    def listen(self,ears):
        return "{} is me ma's cat who uses {} to navigate".format(self.name,ears)

my_cats = [Cat('Henri',4),
           Orange('Gringo',6),
           Sockets('Piper',5)]

my_pets = FamilyMember(my_cats)

# Class().list from the Class --> The list is the attribute... 'Many'
print('I have {} cats, yo'.format(len(my_pets.cats)))
for cat in my_pets.cats:
    print('{} is {}'.format(cat.name,cat.age))
print("All of which are {}'".format(cat.species))
